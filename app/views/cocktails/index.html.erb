<div class="container">
  <h1>Cocktails</h1>
  <hr>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
    </div>
    <div class="col-xs-12 col-sm-6">
      <% @cocktails.each do |cocktail| %>
        <div class="d-flex justify-content-between">
          <h3><%= cocktail.name %></h3>
          <%= link_to toggle_favorite_cocktail_path(cocktail), remote: true, method: :post do %>
            <i class="fas fa-heart"></i>
          <% end %>
        </div>
        <p><%= cocktail.preparation %></p>
      <% end %>
    </div>
  </div>
</div>