var cocktailId = '<%= @cocktail.id%>'



function toggleLikeButton(cocktailId, favoritedCocktail) {
  let likeButton = document.querySelector(`.like-icon[data-id='${cocktailId}']`)
  likeButton.classList.toggle('red');
  if (likeButton.classList.contains('red')) {
    const favoriteList = document.querySelector('.favorites');
    favoriteList.insertAdjacentHTML('beforeend', favoritedCocktail)
  }
  else {
    document.querySelector(`.favorite[data-id='${cocktailId}']`).remove()
  }
}

toggleLikeButton(cocktailId, '<%= j render "cocktails/cocktail", cocktail: @cocktail %>');
